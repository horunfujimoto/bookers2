<div id="error_explanation">
  <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
</div>
<div class="row">

<h1>User info</h1>
<%= form_with model: @user, method: :patch do |f| %> <!--update実行のためメソッドはpatch-->
  <label for="user_name">Name</label>
  <%= f.text_field :name %>
  <label for="user_image">Image</label>
  <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>
  <label for="user_introduction">Introduction</label>
  <%= f.text_area :introduction %>
  <%= f.submit 'Update User' %>
<% end %>